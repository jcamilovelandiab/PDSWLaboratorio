VALUES(i.getNombre(), i.getDescripcion(), i.getFechaLanzamiento(), i.getTarfiaxDia(), i.getFormatoRenta(),
i.getGenero(), i.getTipo() );

vetarCliente
UPDATE VI_CLIENTES c
SET c.vetado=estado WHERE c.documento=docu
